<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="confirmModal" styleClass="stage-root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hdm_stuttgart.cmpt.core.implementations.ui.stages.modal.ConfirmModalController">
    <top>
        <fx:include fx:id="windowFrame" source="/fxml/window-frame.fxml" />
    </top>
    <center>
        <VBox>
            <Label fx:id="labelQuestion" styleClass="app-text, question"/>
            <Label fx:id="labelAction" styleClass="app-text, action"/>
        </VBox>
    </center>
    <bottom>
        <HBox styleClass="app-container-button">
            <Button fx:id="buttonCancel" styleClass="app-button"/>
            <Button fx:id="buttonConfirm" styleClass="app-button">
            <HBox.margin>
               <Insets left="12.0" />
            </HBox.margin></Button>
        </HBox>
    </bottom>
</BorderPane>
