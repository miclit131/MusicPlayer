<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="folderCell" styleClass="folder-cell" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <Label fx:id="icon" styleClass="icon" BorderPane.alignment="CENTER" />
    </left>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <Label fx:id="title" styleClass="folder-title" />
            <Label fx:id="location" styleClass="folder-location" />
        </VBox>
    </center>
    <right>
        <Button fx:id="buttonRemove" styleClass="icon, remove"/>
    </right>
</BorderPane>
